{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
  <main>
    <section>
        {{> title data="Work history" big=true}}
        <div>
            <p>
              <ul>
            {{#each works}}
            <li>
              <div>{{position}}</div>

              <br>

              <div>{{duration.from}} - 
                {{#if duration.to}}{{duration.to}} 
                {{else}} (досі працюю) 
                {{/if}}</div>
              
              <br>

              <div>
                {{#if company.url}}
                {{> link href=company.url text=company.name blank=true noLine=true}}
                {{else}} <b>{{company.name}}</b>
                {{/if}}
                </div>
              <br>
              <br>
              <div><strong>Projects ({{projectAmount}})</strong></div>
              <br>
              <ul>
                {{#each projects}}
                <li>
                  <div>{{> link href=url  text=name blank=true noLine=true}}</div>
                  <br>
                  <div>{{about}}</div>
                  <br>
                  <div><em>Project stacks ({{stackAmount}}) </em></div>
                  <br>
                  <ul>
                  {{#each stacks}}
                  <li>
                  <div>{{name}} </div>
                  {{/each}}
                  </li>
                  </ul>
                  <br>
                  <div><em>Project awards ({{awardAmount}})</em></div>
                  <br>
                  <ul>
                  {{#each awards}}
                  <li>
                  <div>{{name}} </div>
                  {{/each}}
                  </li>
                  </ul>


                </li>
                {{/each}}
              </ul>
            </li>
            <br>
 


            {{/each}}
            </ul>
            </p>
        </div>
    </section>
{{/with}}
</div>

